= form_for @extra_assignment do |f|
  - if @extra_assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@extra_assignment.errors.count, "error")} prohibited this extra_assignment from being saved:"
      %ul
        - @extra_assignment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :extra_id
    = f.text_field :extra_id
  .actions
    = f.submit 'Save'
