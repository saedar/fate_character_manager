= form_for(@skill) do |f|
  - if @skill.errors.any?
    #error_explanation
      %h2
        = pluralize(@skill.errors.count, "error")
        prohibited this skill from being saved:
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :overcome
    %br/
    = f.check_box :overcome
  .field
    = f.label :attack
    %br/
    = f.check_box :attack
  .field
    = f.label :defend
    %br/
    = f.check_box :defend
  .field
    = f.label :advantage
    %br/
    = f.check_box :advantage
  .actions
    = f.submit
