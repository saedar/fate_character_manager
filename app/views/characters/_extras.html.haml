%table.table.table-striped.sheet-components.col-md-6
  %caption= 'Extras'
  %thead
    %tr
      %th= 'Extra'
      %th= 'Description'
  %tbody
  - @character.extra_assignments.each do |extra|
    %tr
      %td= extra_assignment(extra.extra_id).name
      %td= extra_assignment(extra.extra_id).description
      %td
        = link_to '', extra_path(extra.extra_id), class: 'glyphicon glyphicon-eye-open', title: 'View Extra Details'
        = link_to '', character_extra_assignment_path(character_id: @character.id, id: extra.id),
          class: 'glyphicon glyphicon-remove', title: 'Delete Extra', :method => :delete, :data => { :confirm => 'Are you sure?' }